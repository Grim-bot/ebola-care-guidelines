            android:padding="5dp"
            android:text="-"
            android:id="@+id/textViewH9"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="for women of childbearing age: pregnancy test"
            android:id="@+id/textViewH10"></TextView>
        </TableRow>

            </TableLayout>


            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false">
        <TextView
            android:layout_width="match_parent"
