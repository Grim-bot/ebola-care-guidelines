            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"></TextView>

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Secondary priority:"
        android:id="@+id/textViewJ"></TextView>

        <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
